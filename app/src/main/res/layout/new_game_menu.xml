<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_first_player"
        android:textAlignment="center"
        android:textColor="#9E000000"
        android:textSize="30sp"
        android:background="@color/text_view_color"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/choose_player_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_second_player"
        android:textAlignment="center"
        android:textColor="#9E000000"
        android:textSize="30sp"
        android:background="@color/text_view_color"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/create_player_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/create_player"
            android:textAlignment="center"
            android:textColor="#9E000000"
            android:background="@color/button_color"/>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/confirm_button"
            android:textAlignment="center"
            android:textColor="#9E000000"
            android:background="@color/button_color"/>
    </LinearLayout>

</LinearLayout>